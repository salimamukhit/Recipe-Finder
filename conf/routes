# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                                  controllers.HomeController.index

GET     /assets/*file                      controllers.Assets.versioned(path="/public", file: Asset)

# API calls to retrieve recipes and ingredients

GET     /recipes                           controllers.RecipeController.getAllRecipes

GET     /recipes/list/:query               controllers.RecipeController.getRecipeList(query: String)

GET     /ingredients                       controllers.RecipeController.getAllIngredients

GET     /ingredients/recipe/:recipeName    controllers.RecipeController.getIngredients(recipeName: String)

      